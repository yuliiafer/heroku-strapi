    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 50
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "hotels"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "date": {
      "type": "date"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "adress": {
      "type": "string",
      "required": true
    },
    "images_url": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "guestNumber": {
      "type": "string"
    },
    "pricePerNight": {
      "type": "json"
    },
    "latitude": {
      "type": "float"
    },
    "longitude": {
      "type": "float"
    },
    "guests": {
      "type": "enumeration",
      "enum": [
        "single",
        "dobbel",
        "family"
      ]
    },
    "bed": {
      "type": "enumeration",
      "enum": [
        "single",
        "dobbel",
        "king"
      ]
    },
    "internet": {
      "type": "boolean"
    },
    "breakfast": {
      "type": "boolean"
    },
    "airconditioner": {
      "type": "boolean"
    },
    "pets": {
      "type": "boolean"
    },
    "roomCleaning": {
      "type": "boolean"
    }
  }
